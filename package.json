{
  "name": "electron-android-controller",
  "version": "1.0.0",
  "description": "Android TV/Device Controller via ADB",
  "author": "amit",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
  "appId": "com.nextviewtech.androidcontroller",
  "productName": "NV-A Android Controller",
  "directories": {
    "buildResources": "assets"
  },
  "files": [
    "main.js",
    "preload.js",
    "renderer/**/*",
    "assets/**/*",
    "package.json"
  ],
  "win": {
    "icon": "assets/icon.ico",
    "target": "nsis"
  },
 "nsis": {
  "oneClick": false,
  "allowToChangeInstallationDirectory": true,
  "createDesktopShortcut": true,
  "createStartMenuShortcut": true,
  "shortcutName": "NV-A Android Controller",
  "installerIcon": "assets/icon.ico",
  "installerHeaderIcon": "assets/icon.ico",
  "license": "assets/license.txt"
}
},
  "dependencies": {},
  "devDependencies": {
    "electron": "^25.3.0",
    "electron-builder": "^24.6.0"
  }
}
