{
  "name": "electron-android-controller",
  "version": "1.0.0",
  "description": "Android TV/Device Controller via ADB",
  "author": "amit",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.nextviewtech.androidcontroller",
    "productName": "Android Controller",
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    }
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "installerIcon": "assets/icon.ico",
  "uninstallerIcon": "assets/uninstall.ico",
  "installerHeaderIcon": "assets/icon.ico",
  "license": "assets/license.txt",
  "welcomeImage": "assets/installer-background.bmp"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^25.3.0",
    "electron-builder": "^24.6.0"
  }
}
